<h1>Editar usuário</h1>
<form action="/animal/<%= animal.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= animal.nome %>" required>
    </div>
    <div class="form-group">
        <label for="data_nasc">Data de Nascimento</label>
        <input type="date" class="form-control" id="data_nasc" name="data_nasc" value="<%= animal.data_nasc %>" required>
    </div>
    <div class="form-group">
        <label for="RGA">Registro Geral Animal</label>
        <input type="text" class="form-control" id="RGA" name="RGA" value="<%= animal.RGA %>" required>
        <!--<select class="form-control" id="role" name="role" required>
            <option value="admin" <%= usuario.role === 'admin' ? 'selected' : '' %>>Admin</option>
            <option value="usuario" <%= usuario.role === 'usuario' ? 'selected' : '' %>>Usuario</option>
        </select> -->
    </div>
    <div class="form-group">
        <label for="descricao">Observações</label>
        <input type="text" class="form-control" id="descricao" name="descricao" value="<%= animal.descricaosa %>" required>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>
</form>
