<h1>Cadastrar novo usuário</h1>
<form action="/animal" method="POST">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" required>
    </div>
    <div class="form-group">
        <label for="data_nasc">Data de Nascimento</label>
        <input type="date" class="form-control" id="data_nasc" name="data_nasc" required>
    </div>
    <div class="form-group">
        <label for="RGA">Registro Geral Animal</label>
        <input type="text" class="form-control" id="RGA" name="RGA" required>
        <!--<select class="form-control" id="role" name="role" required>
            <option value="admin">Admin</option>
            <option value="usuario">Usuario</option>
        </select>-->
    </div>
    <div class="form-group">
        <label for="descricao">Observações</label>
        <input type="tetx" class="form-control" id="descricao" name="descricao" required>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
